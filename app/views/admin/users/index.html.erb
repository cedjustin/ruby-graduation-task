<div class="admin-page">
    <nav class="navbar navbar-expand-lg navbar-dark home-navbar">
        <a class="navbar-brand" href="#">Admin</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto nav-pill">
                <li class="nav-item d-flex align-items-center m-2">
                    <span class="text-accent m-2"><%= current_user.email %></span>   
                </li>
                <li class="nav-item active m-2">
                    <%= link_to('Logout', destroy_user_session_path, method: :delete,class:"btn bg-accent btn-pill") %>   
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <% applications_without_full_informations = 0 %>
            <div class="col-7">
                <%if @requests.length > 0%>
                    <p class="text-light m5-5 mb-3">Applications list</p>
                    <% column_counter = 0 %>
                    <table class="table table-striped table-light">
                        <thead>
                            <tr>
                            <th scope="col">#</th>
                            <th scope="col">Names</th>
                            <th scope="col">Email</th>
                            <th scope="col">Submitted</th>
                            <th scope="col">Cv</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @requests.each do |request| %>
                                <%if !request["username"].present? || !request["cv"].present? %>
                                    <%applications_without_full_informations += 1%>
                                <%end%>
                                <tr class="border-0 tr-hover">
                                    <th scope="row"><%= column_counter += 1%></th>
                                    <%if request["username"].present?%>
                                        <td><%=request["username"]%></td>
                                    <%else%>
                                        <td>Not set</td>
                                    <%end%>
                                    <%if request["email"].present?%>
                                        <td><%=request["email"]%></td>
                                    <%else%>
                                        <td>Not set</td>
                                    <%end%>
                                    <td><%= time_ago_in_words(request["updated_at"])%><span> ago<span></td>
                                    <%if request["cv"].present?%>
                                        <td><%= link_to image_tag("https://img.icons8.com/windows/32/000000/download.png"), request.cv.url(), class:"download-icon"%></td>
                                    <%else%>
                                        <td>Not set</td>
                                    <%end%>
                                    <%if request["username"].present? && request["email"].present? && request["cv"].present?%>
                                        <td><%= link_to "activate", admin_user_activate_path(request), class: "bg-accent-success btn btn-pill" %>
                                    <% else %>
                                        <td><span class="text-danger">can't activate</span></td>
                                    <% end %>
                                    <td><%= link_to image_tag("https://img.icons8.com/android/24/000000/trash.png"),  request, method: :delete, data: { confirm: 'Are you sure?' }, class:"download-icon"%></td>
                                </tr>
                            <%end%>
                        </tbody>
                    </table>
                <%else%>
                    <p class="text-light m5-5 mb-3 Display-4">There are no applications now</p>
                <%end%>
                <%if @active_users.length > 0%>
                    <p class="text-light m5-5 mb-3">Doctors list</p>
                    <% column_counter = 0 %>
                    <table class="table table-striped table-light">
                        <thead>
                            <tr>
                            <th scope="col">#</th>
                            <th scope="col">Names</th>
                            <th scope="col">Email</th>
                            <th scope="col">Activated</th>
                            <th scope="col">Cv</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @active_users.each do |user| %>
                                <tr class="border-0 tr-hover">
                                    <th scope="row"><%= column_counter += 1%></th>
                                    <%if user["username"].present?%>
                                        <td><%=user["username"]%></td>
                                    <%else%>
                                        <td>Not set</td>
                                    <%end%>
                                    <%if user["email"].present?%>
                                        <td><%=user["email"]%></td>
                                    <%else%>
                                        <td>Not set</td>
                                    <%end%>
                                    <td><%= time_ago_in_words(user["updated_at"])%><span> ago<span></td>
                                    <%if user["cv"].present?%>
                                        <td><%= link_to image_tag("https://img.icons8.com/windows/32/000000/download.png"), user.cv.url(), class:"download-icon"%></td>
                                    <%else%>
                                        <td>Not set</td>
                                    <%end%>
                                    <td><%= link_to image_tag("https://img.icons8.com/android/24/000000/trash.png"),  user, method: :delete, data: { confirm: 'Are you sure?' }, class:"download-icon"%></td>
                                </tr>
                            <%end%>
                        </tbody>
                    </table>
                <%else%>
                    <p class="text-light m5-5 mb-3 Display-4">There are no active doctors now now</p>
                <%end%>
            </div>
            <div class="col-5">
                <%if @active_users.length > 0%>
                    <div class="card-columns mt-2">
                        <div class="card m-2 card-bg-light" style="width:15rem!important">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="card-title font-weight-bold">Active Doctors</span>
                                    <img src="https://img.icons8.com/bubbles/50/000000/medical-doctor.png" class="download-icon"/>
                                </div>
                                <div>
                                    <p class="h4">All doctors <%= @all_doctors%><p>
                                    <div class="ml-2">
                                        <p class="h6">- All active doctors <%= @active_users.length%><p>
                                        <p class="h6">- All non active doctors <%= @requests.length%><p>
                                        <% active_doctor_percantage = (@active_users.length.to_f/@all_doctors.to_f)*100%>
                                        <p>- <%= active_doctor_percantage.to_i%>% of all doctors have been activated</p>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-animated" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: <%= active_doctor_percantage %>%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%end%>
                    <%if @requests.length > 0%>
                        <div class="card m-2 card-bg-dark" style="width:15rem!important">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <span class="card-title font-weight-bold text-light">Applications</span>
                                    <img src="https://img.icons8.com/ios/50/000000/text-input-form.png" class="download-icon"/>
                                </div>
                                <div>
                                    <p class="h4 text-light">All Applications <%= @requests.length%><p>
                                    <div class="ml-2 text-light">
                                        <p class="h6 text-light">- All applications with full informations <%= @active_users.length%><p>
                                        <% percentage_of_all_applications_with_full_information = (applications_without_full_informations == 0 ? 1 : applications_without_full_informations.to_f/@requests.length.to_f)*100%>
                                        <p class="text-light">- <%= percentage_of_all_applications_with_full_information.to_i%>% of all applications have full informations</p>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-animated bg-light" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: <%= percentage_of_all_applications_with_full_information %>%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%end%>
                    <div class="card m-2" style="width:15rem!important">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <span class="h4">Comming soon....</span>
                            </div>
                        </div>
                    </div>
                <div>
            <div>
        <div>
    </div>
</div> 