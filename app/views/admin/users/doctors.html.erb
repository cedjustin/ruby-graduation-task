<div class="admin-page">
    <nav class="navbar navbar-expand-lg navbar-dark home-navbar">
        <%= link_to('Back', admin_users_path, class:"btn bg-accent btn-pill") %>   
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto nav-pill">
                <li class="nav-item d-flex align-items-center m-2">
                    <span class="text-accent m-2"><%= current_user.email %></span>   
                </li>
                <li class="nav-item active m-2">
                    <%= link_to('Logout', destroy_user_session_path, method: :delete,class:"btn bg-accent btn-pill") %>   
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <%if @active_users.length > 0 %>
            <p class="text-light m5-5 mb-3">Active doctors list</p>
            <% column_counter = 0 %>
            <table class="table table-striped table-light">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Names</th>
                    <th scope="col">Email</th>
                    <th scope="col">Activated</th>
                    <th scope="col">Cv</th>
                    </tr>
                </thead>
                <tbody>
                    <% @active_users.each do |user| %>
                        <tr class="border-0 tr-hover">
                            <th scope="row"><%= column_counter += 1%></th>
                            <%if user["username"].present?%>
                                <td><%=user["username"]%></td>
                            <%else%>
                                <td>Not set</td>
                            <%end%>
                            <%if user["email"].present?%>
                                <td><%=user["email"]%></td>
                            <%else%>
                                <td>Not set</td>
                            <%end%>
                            <td><%= time_ago_in_words(user["updated_at"])%><span> ago<span></td>
                            <%if user["cv"].present?%>
                                <td><%= link_to image_tag("https://img.icons8.com/windows/32/000000/download.png"), user.cv.url(), class:"download-icon"%></td>
                            <%else%>
                                <td>Not set</td>
                            <%end%>
                            <td><%= link_to image_tag("https://img.icons8.com/android/24/000000/trash.png"),  user, method: :delete, data: { confirm: 'Are you sure?' }, class:"download-icon"%></td>
                        </tr>
                    <%end%>
                </tbody>
            </table>
            <%if @active_users.length > 5 %>
                <div class="nav-pill"><div class="m-2 btn bg-accent btn-pill"><%= paginate @active_users, params: {requests:true},class:"pagination" %></div></div>
            <%end%>
        <%else%>
            <p class="text-light m5-5 mb-3 Display-4">There are no active doctors now now</p>
        <%end%>
        <div class="nav-pill"><div class="m-2 btn bg-accent btn-pill"><%= paginate @active_users,class:"pagination" %></div></div>
    </div>
</div>    